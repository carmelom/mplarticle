# Set default figure size
figure.facecolor:             white
# figure.figsize:             3.404, 2.553  # single column, 4:3
# figure.figsize:               3.404, 2.27  # single column, 3:2
figure.figsize:               3.404, 2.05  # single column, 3:2


# The figure subplot parameters.  All dimensions are a fraction of the figure size
figure.subplot.wspace:        0.13    # the amount of width reserved for blank space between subplots,
                                     # expressed as a fraction of the average axis width
figure.subplot.hspace:        0.13  # 0.26  # 0.195   # the amount of height reserved for white space between subplots,
                                     # expressed as a fraction of the average axis height
figure.subplot.left    : 0.13  ## the left side of the subplots of the figure
figure.subplot.right   : 0.87    ## the right side of the subplots of the figure
figure.subplot.bottom  : 0.14   ## the bottom of the subplots of the figure
figure.subplot.top     : 0.95  # 0.87   ## the top of the subplots of the figure

# stix font for everything:
# https://www.southampton.ac.uk/~feeg1001/notebooks/Matplotlib.html
font.size:                    8  # 8.5
font.family:                  STIXGeneral

# The following settings allow you to select the fonts in math mode.
# They map from a TeX font name to a fontconfig font pattern.
# These settings are only used if mathtext.fontset is 'custom'.
# Note that this "custom" mode is unsupported and may go away in the
# future.
#mathtext.cal :               cursive
#mathtext.rm  :               serif
#mathtext.tt  :               monospace
#mathtext.it  :               serif:italic
#mathtext.bf  :               serif:bold
#mathtext.sf  :               sans
mathtext.fontset:             stix # Should be 'dejavusans' (default),
#                                'dejavuserif', 'cm' (Computer Modern), 'stix',
#                                'stixsans' or 'custom'
#mathtext.fallback_to_cm :    True  # When True, use symbols from the Computer Modern
                                 # fonts when a symbol can not be found in one of
                                 # the custom math fonts.

mathtext.default:             regular  # regular # The default font to use for math.
                       # Can be any of the LaTeX font names, including
                       # the special name "regular" for the same font
                       # used in regular text.

# Set x axis
xtick.direction:              in
xtick.major.size:             3
xtick.major.width:            0.5
xtick.minor.size:             1.5
xtick.minor.width:            0.5
# xtick.minor.visible:        True
xtick.top:                    True

# Set y axis
ytick.direction:              in
ytick.major.size:             3
ytick.major.width:            0.5
ytick.minor.size:             1.5
ytick.minor.width:            0.5
# ytick.minor.visible:        True
ytick.right:                  True

axes.formatter.use_mathtext:  True

# Set lines and makrers
axes.linewidth:               0.5
lines.linewidth:              0.85  # 1.0
lines.markersize:             3.3
lines.markeredgewidth:        0.75

# x/y labels
axes.labelpad:                2.1  # 1.8

# legend frame
legend.frameon:               True
# Dimensions as fraction of fontsize:
legend.handletextpad:         0.6      # the space between the legend line and legend text
legend.fontsize      : 6
legend.borderaxespad : 1

# grid
axes.grid:                    False
grid.linewidth:               0.5

# images
image.aspect:                 1
image.origin:                 upper
image.interpolation:          none
# image.cmap:                 viridis

### PATCHES
patch.linewidth:              0.8       # edge width in points.


